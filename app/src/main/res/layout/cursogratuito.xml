<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_curso"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="5sp"
    android:layout_height="match_parent"
    tools:context=".ui.main.FragmentCursoFragment">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imgUM"
        android:layout_width="wrap_content"
        android:layout_height="200sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="5sp"
        android:background="@drawable/um" />

    <TextView
        android:layout_below="@+id/imgUM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="215sp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:text="Aula 1: RESERVA DE EMERGÊNCIA | Onde investir, Corretoras, Quanto precisa ter?"/>
    <Space
        android:layout_width="5sp"
        android:layout_height="5sp"/>

    <Button
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:onClick="AULA1"
        android:layout_marginTop="258sp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="ASSISTA GRÁTIS"
        android:textColor="#ffffff"
        android:textSize="25sp" />
    <Space
        android:layout_width="10sp"
        android:layout_height="10sp"/>
    <ImageView
        android:id="@+id/imgDois"
        android:layout_width="wrap_content"
        android:layout_height="200sp"
        android:layout_marginTop="320sp"
        android:layout_marginRight="5sp"
        android:background="@drawable/dois" />
    <TextView
        android:textColor="#000000"
        android:layout_below="@+id/imgUM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="530sp"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        android:text="AULA 2: O que é ON, PN e UNIT? | O que é Tag Along e Free Float?"/>
    <Button
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:onClick="AULA2"
        android:layout_marginTop="570sp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="ASSISTA GRÁTIS"
        android:textColor="#ffffff"
        android:textSize="25sp" />
        <ImageView
            android:id="@+id/imgTres"
            android:layout_width="wrap_content"
            android:layout_height="200sp"
            android:layout_marginTop="640sp"
            android:layout_marginRight="5sp"
            android:background="@drawable/tres" />
        <TextView
            android:textColor="#000000"
            android:layout_below="@+id/imgTres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="850sp"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:text="AULA 3: FUNDOS IMOBILIÁRIOS, Seguimento de listagem, LÍQUIDEZ." />
        <Button
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:onClick="AULA3"
            android:layout_marginTop="890sp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="ASSISTA GRÁTIS"
            android:textColor="#ffffff"
            android:textSize="25sp" />
        <ImageView
            android:id="@+id/imgTresptDois"
            android:layout_width="wrap_content"
            android:layout_height="200sp"
            android:layout_marginTop="960sp"
            android:layout_marginRight="5sp"
            android:background="@drawable/tresptdois" />
        <TextView
            android:textColor="#000000"
            android:layout_below="@+id/imgTres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1170sp"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:text="AULA 3: Parte II."/>
        <Button
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:onClick="AULA3PT2"
            android:layout_marginTop="1195sp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="ASSISTA GRÁTIS"
            android:textColor="#ffffff"
            android:textSize="25sp" />
        <ImageView
            android:id="@+id/imgQuatro"
            android:layout_width="wrap_content"
            android:layout_height="200sp"
            android:layout_marginTop="1270sp"
            android:layout_marginRight="5sp"
            android:background="@drawable/quatro" />
        <TextView
            android:textColor="#000000"
            android:layout_below="@+id/imgTres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1480sp"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:text="AULA 4: INDICADORES FUNDAMENTALISTAS."/>
        <Button
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:onClick="AULA4"
            android:layout_marginTop="1510sp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="ASSISTA GRÁTIS"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_marginBottom="60sp"
            android:layout_marginRight="20sp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
</ScrollView>